<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- Filters -->
    <filter>
        <filter-name>ControllerFilter</filter-name>
        <filter-class>security.filter.controller.ControllerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ControllerFilter</filter-name>
        <servlet-name>Controller</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>PageRedirectFilter</filter-name>
        <filter-class>security.filter.controller.PageRedirectFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PageRedirectFilter</filter-name>
        <servlet-name>PageRedirect</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>security.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <servlet-name>PageRedirect</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>LocalDBFilter</filter-name>
        <filter-class>security.filter.resource.LocalDBFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocalDBFilter</filter-name>
        <servlet-name>ImageRetriever</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>ImageRetrieverFilter</filter-name>
        <filter-class>security.filter.resource.ImageRetrieverFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ImageRetrieverFilter</filter-name>
        <servlet-name>ImageRetriever</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>RegisterFilter</filter-name>
        <filter-class>security.filter.account.RegisterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RegisterFilter</filter-name>
        <servlet-name>RegisterServlet</servlet-name>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>security.filter.account.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>LoginServlet</servlet-name>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>UpdateFilter</filter-name>
        <filter-class>security.filter.account.UpdateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UpdateFilter</filter-name>
        <servlet-name>UpdateServlet</servlet-name>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>security.filter.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/html/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>Error500</filter-name>
        <filter-class>security.error.Error500</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Error500</filter-name>
        <url-pattern>/500</url-pattern>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>Error404</filter-name>
        <filter-class>security.error.Error404</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Error404</filter-name>
        <url-pattern>/404</url-pattern>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <!-- Servlets -->

    <servlet>
        <servlet-name>PageRedirect</servlet-name>
        <servlet-class>controller.redirect.PageRedirect</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageRedirect</servlet-name>
        <url-pattern>/PageRedirect</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>business.account.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>business.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>business.account.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>business.account.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ImageRetriever</servlet-name>
        <servlet-class>controller.resource.ImageRetriever</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageRetriever</servlet-name>
        <url-pattern>/ImageRetriever</url-pattern>
    </servlet-mapping>

    <!-- Configs -->

    <session-config>
        <session-timeout>2</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/500</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/404</location>
    </error-page>
</web-app>